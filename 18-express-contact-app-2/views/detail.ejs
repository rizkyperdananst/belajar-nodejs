<div class="container mt-3">
     <div class="row">
          <div class="col-md">
               <h2>Detail Contact</h2>
               <% if (!contact) { %>
                    <div class="alert alert-danger fw-bold" role="alert">
                         Data contact tidak ada <br>
                         <a href="/contact" class="fw-normal">&laquo; Kembali Ke Daftar Contact</a>
                    </div>
               <% } else { %>
               <div class="card" style="width: 18rem;">
                    <div class="card-body">
                      <h5 class="card-title"><%= contact.nama %></h5>
                      <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.nohp %></h6>
                      <p class="card-text"><%= contact.email %></p>
                      <a href="/contact" class="card-link">&laquo; Kembali Ke Daftar Contact</a>
                    </div>
                  </div>
               <% } %>
          </div>
     </div>
</div>